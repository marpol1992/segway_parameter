<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:screenOrientation="landscape"
    android:configChanges="orientation|keyboardHidden"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity"
    android:touchscreenBlocksFocus="false">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="440dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:id="@+id/linearLayout"
        android:layout_marginLeft="1dp"
        android:layout_weight="1.21" >


        <com.jjoe64.graphview.GraphView
            android:layout_width="438dp"
            android:layout_gravity="center"
            android:layout_height="250dp"
            android:id="@+id/graph"
            android:layout_weight="1.21" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/linearLayout">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hight_layout"
            android:layout_marginBottom="@dimen/main_bottom_margin">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton"
                android:checked="false"
                android:onClick="onRadioButtonClicked"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="20dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="M1 Iz = "
                android:id="@+id/M1IZ"
                android:layout_marginLeft="15px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="20dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="0"
                android:id="@+id/resM1IZ" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hight_layout"
            android:layout_marginBottom="@dimen/main_bottom_margin">


            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton2"
                android:checked="false"
                android:buttonTint="@color/color_2_radio"
                android:backgroundTint="@color/color_2_radio"
                android:onClick="onRadioButtonClicked"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="20dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="M1 Io = "
                android:id="@+id/M1I0"
                android:layout_marginLeft="15px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="20dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="0"
                android:id="@+id/resM1I0" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hight_layout"
            android:layout_marginBottom="@dimen/main_bottom_margin">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton3"
                android:checked="false"
                android:buttonTint="@color/color_3_radio"
                android:backgroundTint="@color/color_3_radio"
                android:onClick="onRadioButtonClicked"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="20dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="M2 Iz = "
                android:id="@+id/M2IZ"
                android:layout_marginLeft="15px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="20dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="0"
                android:id="@+id/resM2IZ" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hight_layout"
            android:layout_marginBottom="@dimen/main_bottom_margin">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton4"
                android:checked="false"
                android:buttonTint="@color/color_4_radio"
                android:backgroundTint="@color/color_4_radio"
                android:onClick="onRadioButtonClicked"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="20dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="M2 Io = "
                android:id="@+id/M2I0"
                android:layout_marginLeft="15px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="20dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="0"
                android:id="@+id/resM2I0" />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hight_layout"
            android:layout_marginBottom="@dimen/main_bottom_margin">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton6"
                android:checked="false"
                android:buttonTint="@color/color_5_radio"
                android:backgroundTint="@color/color_5_radio"
                android:onClick="onRadioButtonClicked"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="20dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Î¦= "
                android:id="@+id/textView"
                android:layout_marginLeft="15px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="20dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="0"
                android:id="@+id/Angle_value" />


        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hight_layout"
            android:layout_marginBottom="@dimen/main_bottom_margin">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton5"
                android:checked="false"
                android:buttonTint="@color/color_6_radio"
                android:backgroundTint="@color/color_6_radio"
                android:clickable="true"
                android:contextClickable="false"
                android:onClick="onRadioButtonClicked"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="20dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Uaku = "
                android:id="@+id/Uaku_sign"
                android:layout_marginLeft="15px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="20dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="0"
                android:id="@+id/Uaku_value" />
        </LinearLayout>
    </LinearLayout>



</RelativeLayout>
